<simulation verbosity='medium'>
  <output prefix='simulation'>
      <properties stride='100' filename='out' flush="1" >  [ step, time{picosecond}, conserved{electronvolt}, temperature{kelvin}, kinetic_md{electronvolt}, kinetic_td{electronvolt}, kinetic_cv{electronvolt}, pressure_md{bar}, pressure_cv{bar}, potential{electronvolt}, spring{electronvolt}, volume{angstrom3}] </properties>
      <trajectory stride='100' filename='pos' flush="1" cell_units='angstrom'> positions{angstrom} </trajectory>
    <checkpoint stride='2000'/>
  </output>
  <total_steps>2000000</total_steps>
  <prng>
    <seed>31415</seed>
  </prng>
  <ffsocket name='lammps' mode='unix'>
    <address> 01 </address>
    <port> 1201 </port>
  </ffsocket>
  <system>
    <initialize nbeads='32'>
      <file mode='xyz'> init.xyz </file>
      <velocities mode='thermal' units='kelvin'> 0 </velocities>
    </initialize>
    <forces>
      <force forcefield='lammps'> </force>
    </forces>
    <motion mode='dynamics'>
      <dynamics mode='npt'>
        <timestep units='femtosecond'> 0.5 </timestep>
        <thermostat mode='pile_l'>
          <tau units='femtosecond'> 100 </tau>
        </thermostat>
        <barostat mode='isotropic'>
          <tau units='femtosecond'> 500 </tau>
        <thermostat mode='langevin'>
          <tau units='femtosecond'> 100 </tau>
        </thermostat>
        </barostat>
      </dynamics>
    </motion>
    <ensemble>
      <temperature units='kelvin'> 300 </temperature>
      <pressure units='bar'> 1 </pressure>
    </ensemble>
  </system>
</simulation>
